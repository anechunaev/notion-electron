{
  "name": "notion-electron",
  "version": "1.9.2",
  "main": "index.mjs",
  "type": "module",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "APPIMAGE=/ electron .",
    "make": "electron-packager . notion-electron --platform=linux --arch=x64 --out=dist/ --icon=./notion-electron.png --overwrite && chmod -R 777 ./dist/notion-electron-linux-x64/",
    "pack": "electron-builder --linux",
    "install-desktop-file": "desktop-file-install --dir=$HOME/.local/share/applications ./notion-electron.desktop",
    "dev": "node ./dev/release-server.mjs",
    "flatpak-lint": "flatpak run --command=flatpak-builder-lint org.flatpak.Builder manifest io.github.anechunaev.notion-electron.yaml && appstreamcli validate --explain io.github.anechunaev.notion-electron.metainfo.xml",
    "flatpak-build": "flatpak-node-generator npm package-lock.json && rm -rf .flatpak-builder/build && flatpak-builder build io.github.anechunaev.notion-electron.yaml --install-deps-from=flathub --force-clean --user --install",
    "flatpak-test": "flatpak run --log-session-bus --user io.github.anechunaev.notion-electron",
    "flatpak-delete": "flatpak uninstall --delete-data io.github.anechunaev.notion-electron || true && rm -rf .flatpak-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Artem Nechunaev <artem@nechunaev.com>",
  "license": "MIT",
  "description": "Unofficial Notion desktop client made with Electron for Linux",
  "repository": {
    "type": "git",
    "url": "https://github.com/anechunaev/notion-electron",
    "owner": "anechunaev",
    "name": "notion-electron",
    "project": "notion-electron"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@clebert/node-d-bus": "^1.0.0",
    "@jimp/core": "^1.6.0",
    "@jimp/js-png": "^1.6.0",
    "@jimp/plugin-resize": "^1.6.0",
    "d-bus-message-protocol": "^1.0.0",
    "d-bus-type-system": "^1.0.0",
    "decode-ico": "^0.4.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "sharp": "^0.34.4",
    "sortablejs": "^1.15.6"
  },
  "dbus": {
    "name": "io.github.anechunaev.NotionElectron",
    "path": "/io/github/anechunaev/NotionElectron",
    "interface": "io.github.anechunaev.NotionElectron"
  },
  "build": {
    "appId": "io.github.anechunaev.NotionElectron",
    "productName": "Notion Electron",
    "executableName": "notion-electron",
    "linux": {
      "target": [
        "rpm",
        "deb",
        "AppImage"
      ],
      "icon": "./assets/icons/desktop.png",
      "desktop": {
        "entry": {
          "Name": "Notion Electron",
          "Icon": "notion-electron",
          "Terminal": "false",
          "Type": "Application",
          "Categories": "Utility;Office;",
          "Actions": "Options;Updates;About;"
        },
        "desktopActions": {
          "Options": {
            "Name": "Options",
            "Exec": "dbus-send --session --type=signal --dest=io.github.anechunaev.NotionElectron /io/github/anechunaev/NotionElectron io.github.anechunaev.NotionElectron.Options"
          },
          "Updates": {
            "Name": "Updates",
            "Exec": "dbus-send --session --type=signal --dest=io.github.anechunaev.NotionElectron /io/github/anechunaev/NotionElectron io.github.anechunaev.NotionElectron.Updates"
          },
          "About": {
            "Name": "About",
            "Exec": "dbus-send --session --type=signal --dest=io.github.anechunaev.NotionElectron /io/github/anechunaev/NotionElectron io.github.anechunaev.NotionElectron.About"
          }
        }
      },
      "category": "Utility;Office;"
    },
    "appImage": {
      "artifactName": "Notion_Electron-${version}-${arch}.AppImage"
    },
    "flatpack": {
      "artifactName": "Notion_Electron-${version}-${arch}.flatpak",
      "branch": "main"
    },
    "artifactName": "notion-electron-${version}.${arch}.${ext}",
    "icon": "./assets/icons/desktop.png",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**/*"
    ]
  }
}
