{
  "name": "notion-electron",
  "version": "1.9.2",
  "main": "index.mjs",
  "type": "module",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "APPIMAGE=/ electron .",
    "make": "electron-packager . notion-electron --platform=linux --arch=x64 --out=dist/ --icon=./notion-electron.png --overwrite && chmod -R 777 ./dist/notion-electron-linux-x64/",
    "pack": "electron-builder --linux",
    "install-desktop-file": "desktop-file-install --dir=$HOME/.local/share/applications ./notion-electron.desktop",
    "dev": "node ./dev/release-server.mjs",
    "flatpak-lint": "./dev/flatpak/lint.sh",
    "flatpak-build": "./dev/flatpak/build.sh",
    "flatpak-test": "./dev/flatpak/test.sh",
    "flatpak-clean": "./dev/flatpak/clean.sh",
    "snap-build": "./dev/snap/build.sh",
    "snap-upload": "snapcraft upload --release=stable \"$(find dist -maxdepth 1 -type f -name '*.snap')\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Artem Nechunaev <artem@nechunaev.com>",
  "license": "MIT",
  "description": "Unofficial Notion desktop client made with Electron for Linux",
  "repository": {
    "type": "git",
    "url": "https://github.com/anechunaev/notion-electron",
    "owner": "anechunaev",
    "name": "notion-electron",
    "project": "notion-electron"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "electron": "^39.2.4",
    "electron-builder": "^26.3.0"
  },
  "dependencies": {
    "@clebert/node-d-bus": "^1.0.0",
    "@jimp/core": "^1.6.0",
    "@jimp/js-png": "^1.6.0",
    "@jimp/plugin-resize": "^1.6.0",
    "d-bus-message-protocol": "^1.0.0",
    "d-bus-type-system": "^1.0.0",
    "decode-ico": "^0.4.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "sharp": "^0.34.4",
    "sortablejs": "^1.15.6"
  },
  "dbus": {
    "name": "io.github.anechunaev.NotionElectron",
    "path": "/io/github/anechunaev/NotionElectron",
    "interface": "io.github.anechunaev.NotionElectron"
  },
  "build": {
    "appId": "io.github.anechunaev.NotionElectron",
    "productName": "Notion Electron",
    "executableName": "notion-electron",
    "linux": {
      "target": [
        "rpm",
        "deb",
        "AppImage"
      ],
      "icon": "./assets/icons/desktop.png",
      "desktop": {
        "entry": {
          "Name": "Notion Electron",
          "Icon": "notion-electron",
          "Terminal": "false",
          "Type": "Application",
          "Categories": "Utility;Office;",
          "Actions": "Options;Updates;About;"
        },
        "desktopActions": {
          "Options": {
            "Name": "Options",
            "Exec": "dbus-send --session --type=signal --dest=io.github.anechunaev.NotionElectron /io/github/anechunaev/NotionElectron io.github.anechunaev.NotionElectron.Options"
          },
          "Updates": {
            "Name": "Updates",
            "Exec": "dbus-send --session --type=signal --dest=io.github.anechunaev.NotionElectron /io/github/anechunaev/NotionElectron io.github.anechunaev.NotionElectron.Updates"
          },
          "About": {
            "Name": "About",
            "Exec": "dbus-send --session --type=signal --dest=io.github.anechunaev.NotionElectron /io/github/anechunaev/NotionElectron io.github.anechunaev.NotionElectron.About"
          }
        }
      },
      "category": "Utility;Office;"
    },
    "snap": {
      "title": "Notion Electron",
      "summary": "Unofficial Notion client",
      "category": "Productivity",
      "description": "Unofficial desktop application for Notion, built as an Electron wrapper with additional features. Fully functional clients for Notion Calendar and Notion Mail included as dedicated tabs.\n\nSome of notable features include:\n* **Integrated Notion Tools** — Fully functional dedicated tabs for Notion Calendar and Notion Mail within the same application. This approach saves system memory by reusing a single Electron process compared to running separate clients.\n* **Theme Support** — Switch effortlessly between light and dark UI themes.\n* **Tray Icon** — Minimize the application to the system tray for quick access. For environments without the tray like Gnome, there are actions available to access app options and updates.\n* **Performance Tweaks** — Optimized to reduce startup time for faster access.\n* **Browser-Like Tabs** — Tabs behave just like in a web browser: each has its own history, can be reordered, pinned, or even dragged from Notion Electron to your browser.\n\n**Disclaimer:** Notion Electron is an independent, open-source project and is not affiliated with, endorsed by, or sponsored by Notion or any of its owners. “Notion” is a trademark of its respective owner. This software is an unofficial wrapper intended solely for personal convenience. All usage of the Notion service remains subject to Notion’s own terms and policies.",
      "base": "core24",
      "grade": "stable"
    },
    "artifactName": "Notion_Electron-${version}-${arch}.${ext}",
    "icon": "./assets/icons/desktop.png",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**/*"
    ]
  }
}
