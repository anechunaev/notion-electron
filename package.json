{
  "name": "notion-electron",
  "version": "1.9.1-gnome-fix.0",
  "main": "index.mjs",
  "type": "module",
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "APPIMAGE=/ electron .",
    "make": "electron-packager . notion-electron --platform=linux --arch=x64 --out=dist/ --icon=./notion-electron.png --overwrite && chmod -R 777 ./dist/notion-electron-linux-x64/",
    "pack": "electron-builder --linux",
    "install-desktop-file": "desktop-file-install --dir=$HOME/.local/share/applications ./notion-electron.desktop",
    "dev": "node ./dev/release-server.mjs",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Artem Nechunaev <artem@nechunaev.com>",
  "license": "MIT",
  "description": "Unofficial Notion desktop client made with Electron for Linux",
  "repository": {
    "type": "git",
    "url": "https://github.com/anechunaev/notion-electron",
    "owner": "anechunaev",
    "name": "notion-electron",
    "project": "notion-electron"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "devDependencies": {
    "@electron/packager": "^19.0.1",
    "electron": "^39.1.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "@jimp/core": "^1.6.0",
    "@jimp/js-png": "^1.6.0",
    "@jimp/plugin-resize": "^1.6.0",
    "dbus-next": "^0.10.2",
    "decode-ico": "^0.4.1",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.6.2",
    "sharp": "^0.34.4",
    "sortablejs": "^1.15.6"
  },
  "dbus": {
    "name": "com.nechunaev.NotionElectron",
    "path": "/com/nechunaev/NotionElectron",
    "interface": "com.nechunaev.NotionElectron"
  },
  "build": {
    "appId": "com.nechunaev.NotionElectron",
    "productName": "Notion Electron",
    "executableName": "notion-electron",
    "linux": {
      "target": [
        "rpm",
        "deb",
        "AppImage"
      ],
      "icon": "./assets/icons/desktop.png",
      "desktop": {
        "entry": {
          "Name": "Notion Electron",
          "Icon": "notion-electron",
          "Terminal": "false",
          "Type": "Application",
          "Categories": "Utility;Office;",
          "Actions": "Options;Updates;About;"
        },
        "desktopActions": {
          "Options": {
            "Name": "Options",
            "Exec": "dbus-send --session --dest=com.nechunaev.NotionElectron /com/nechunaev/NotionElectron com.nechunaev.NotionElectron.Options"
          },
          "Updates": {
            "Name": "Updates",
            "Exec": "dbus-send --session --dest=com.nechunaev.NotionElectron /com/nechunaev/NotionElectron com.nechunaev.NotionElectron.Updates"
          },
          "About": {
            "Name": "About",
            "Exec": "dbus-send --session --dest=com.nechunaev.NotionElectron /com/nechunaev/NotionElectron com.nechunaev.NotionElectron.About"
          }
        }
      },
      "category": "Utility;Office;"
    },
    "artifactName": "notion-electron-${version}.${arch}.${ext}",
    "icon": "./assets/icons/desktop.png",
    "asar": true,
    "asarUnpack": [
      "**/node_modules/sharp/**",
      "**/node_modules/@img/**/*",
      "**/node_modules/dbus-next/**/*"
    ]
  }
}
